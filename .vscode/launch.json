    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Backend in debug",
            "cwd": "${workspaceFolder}/src",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run-script", "start"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "TS Launch Backend in debug",
            "cwd": "${workspaceFolder}/src",
            "program": "./index.ts",
            "preLaunchTask": "npm: build - src",
            "outFiles": ["./dist/index.js"]
        }
    ]
}